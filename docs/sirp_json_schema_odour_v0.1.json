{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "default": {},
  "title": "Incident Schema",
  "required": [
    "sirp_incident"
  ],
  "properties": {
    "sirp_incident": {
      "type": "object",
      "default": {},
      "title": "The sirp_incident Schema",
      "required": [
        "sirp_incidentid",
        "sirp_incidentreporttype",
        "sirp_observereddatetime",
        "sirp_reporteddatetime",
        "sirp_incidentlocation",
        "sirp_reporterdetails"
      ],
      "properties": {
        "sirp_incidentid": {
          "type": "string",
          "format": "uuid",
          "default": "",
          "title": "The sirp_incidentid Schema",
          "examples": [
            "9151f21f-43ae-43b4-92f3-f4af67cdf544"
          ]
        },
        "sirp_incidentreporttype": {
          "type": "array",
          "uniqueItems": true,
          "minItems": 1,
          "items": {
            "type": "integer",
            "enum": [100, 200, 300, 400
            ],
            "meta:enum": {
              "100": "Odour",
              "200": "Illegal Fishing",
              "300": "Water Pollution",
              "400": "Flooding"
            }
          }
        },
        "sirp_observeddatetime": {
          "type": "string",
          "format": "date-time",
          "default": "",
          "title": "The sirp_observeddatetime Schema",
          "examples": [
            "2023-06-26 23:00:00.0000000"
          ]
        },
        "sirp_reporteddatetime": {
          "type": "string",
          "format": "date-time",
          "default": "",
          "title": "The sirp_reporteddatetime Schema",
          "examples": [
            "2023-06-27 23:00:00.0000000"
          ]
        },
        "sirp_Odour": {
          "type": "object",
          "default": {},
          "title": "The sirp_Odour Schema",
          "properties": {
            "sirp_howwouldyoudescribethesmell": {
              "type": "array",
              "description": "How would you describe the smell?",
              "uniqueItems": true,
              "minItems": 1,
              "maxItems": 1,
              "items": {
                "type": "integer",
                "enum": [
                  100, 200, 300, 400, 500, 600, 700
                ],
                "meta:enum": {
                  "100": "Sewage",
                  "200": "Rubbish or refuse",
                  "300": "Burning or Smoke",
                  "400": "Gas or Petrol",
                  "500": "Agricultural e.g. muck spreading",
                  "600": "You cannot describe it",
                  "700": "Something Else"
                }
              }
            },
            "sirp_odoursmellother": {
              "type": "string",
              "description": "something else please provide a description for the smell you experiencing",
              "default": "",
              "title": "The sirp_odourSmellOther Schema"
            },
            "sirp_haveyounoticedthesamesmellbefore": {
              "type": "array",
              "title": "The sirp_haveyounoticedthesamesmellbefore Schema",
              "description": "Have you noticed the smell this smell before",
              "uniqueItems": true,
              "minItems": 1,
              "maxItems": 1,
              "items": {
                "type": "integer",
                "enum": [
                  100, 200, 300
                ],
                "meta:enum": {
                  "100": "Yes, it happens regularly",
                  "200": "Yes, a few times",
                  "300": "No, this is the first time"
                }
              }
            },
            "sirp_doyouknowwherethesmelliscoming from": {
              "type": "boolean",
              "description": "Do you know where the smell is coming from",
              "default": "",
              "title": "The sirp_doyouknowwherethesmelliscomingfrom Schema",
              "examples": [
                true, false
              ]
            },
            "sirp_odourSourceOther": {
              "type": "string",
              "description": "A description field for when Do you know where the smell is coming from? is answered as yes",
              "default": "",
              "title": "The sirp_odourSourceOther Schema",
              "examples": [
                "Waste Site which is located down the street"
              ]
            },
            "sirp_sirp_Canyourecognisethesmellonthingslikeyourcl": {
              "type": "array",
              "description": "Can you smell things on your clothes or hair",
              "title": "The sirp_Canyourecognisethesmellonthingslikeyourcl Schema",
              "uniqueItems": true,
              "minItems": 1,
              "items": {
                "type": "integer",
                "enum": [
                  100, 200, 300
                ],
                "meta:enum": {
                  "100": "Yes",
                  "200": "No",
                  "300": "Dont Know"
                }
              },
              "sirp_Hasthesmellstoppedyoufromdoinganyofthefo": {
                "type": "array",
                "description": "Smell stopped the following activities",
                "title": "The sirp_Hasthesmellstoppedyoufromdoinganyofthefo Schema",
                "uniqueItems": true,
                "minItems": 1,
                "items": {
                  "type": "integer",
                  "enum": [
                    100, 200, 300, 400, 500
                  ],
                  "meta:enum": {
                    "100": "Using parts of your own property, for example sitting in your garden",
                    "200": "Doing jobs outside, for example hanging washing out or gardening",
                    "300": "Going to certain places, for example going to the shops",
                    "400": "Something else",
                    "500": "None of these"
                  }
                }
              },
              "sirp_OdourStoppedActivityOther": {
                "type": "string",
                "default": "",
                "description": "(If something else ) Please provide a description of which activities you can no longer do",
                "title": "The sirp_OdourStoppedActivity Schema",
                "examples": [
                  ""
                ]
              },
              "sirp_hasthesmellcausedanyofthefollowingsymptoms": {
                "type": "array",
                "description": "Has the smell caused any of the following symptoms?",
                "title": "The sirp_hasthesmellcausedanyofthefollowingsymptoms Schema",
                "uniqueItems": true,
                "minItems": 1,
                "items": {
                  "type": "integer",
                  "enum": [
                    100, 200, 300, 400, 500, 600
                  ],
                  "meta:enum": {
                    "100": "Headache",
                    "200": "Watering eyes",
                    "300": "Sickness or nausea",
                    "400": "Vomiting",
                    "500": "Something else",
                    "600": "None of these"
                  }
                },
                "sirp_odourSymptomsOther": {
                  "type": "string",
                  "description": "(If something else) Please provide a description of the symptoms you have",
                  "default": "",
                  "title": "The sirp_odourSymptomsOther Schema",
                  "examples": [
                    ""
                  ]
                },
                "sirp_hownoticeableisthesmellwhenitsthere": {
                  "type": "array",
                  "description": "How noticeable is the smell when it's there?",
                  "title": "The sirp_hownoticeableisthesmellwhenitsthere Schema",
                  "uniqueItems": true,
                  "minItems": 1,
                  "items": {
                    "type": "integer",
                    "enum": [
                      100, 200, 300, 400, 500
                    ],
                    "meta:enum": {
                      "100": "You can smell it all the time when breathing normally",
                      "200": "You notice it if you breathe in deeply",
                      "300": "It is quite faint",
                      "400": "It is very faint, you can only notice it if you try",
                      "500": "You cannot remember"
                    },
                 "sirp_hasthesmellmeantyouhavehadtodoanyofthe": {
                  "type": "array",
                  "description": "hasthesmellmeantyouhavehadtodoanyofthefollowing",
                  "title": "The sirp_hownoticeableisthesmellwhenitsthere Schema",
                  "uniqueItems": true,
                  "minItems": 1,
                  "items": {
                    "type": "integer",
                    "enum": [
                      100, 200, 300, 400, 500, 600
                    ],
                    "meta:enum": {
                      "100": "Cover your face or nose",
                      "200": "Keep windows and doors closed",
                      "300": "Leave the area of the smell",
                      "400": "Leave your home",
                      "500": "Something else",
                      "600": "None of these"
                      }
                    },
                "sirp_odouractionother": {
                  "type": "string",
                  "description": "(If something else) Please provide a description of measures you have had to take",
                  "default": "",
                  "title": "The sirp_odouractionother Schema",
                  "examples": [
                  ]     
                   },
