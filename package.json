{
  "name": "smart-incident-reporting",
  "version": "0.2.0",
  "description": "Digital service for incident reporting",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "node index.js",
    "build:css": "./bin/build-css.sh",
    "build:js": "./bin/build-js.sh",
    "build": "./bin/build.sh",
    "copy:static": "bin/copy-static.sh",
    "debug": "nodemon --inspect index.js",
    "watch:css": "nodemon -e scss -x 'npm run build:css'",
    "watch:nodejs": "nodemon --delay 1000ms --signal SIGTERM -r dotenv/config index.js",
    "dev": "concurrently 'npm:watch:css' 'npm:watch:nodejs'",
    "lint": "standard",
    "unit-test": "jest --runInBand --verbose",
    "test": "npm run lint && npm run unit-test",
    "prettier": "prettier-config-standard",
    "start-backend": "docker-compose -f docker/backend-services.yml up -d",
    "stop-backend": "docker-compose -f docker/backend-services.yml down"
  },
  "author": "Department for Environment, Food & Rural Affairs",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/DEFRA/smart-incident-reporting/issues"
  },
  "homepage": "https://github.com/DEFRA/smart-incident-reporting#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/smart-incident-reporting.git"
  },
  "dependencies": {
    "@azure/identity": "^4.0.1",
    "@azure/service-bus": "^7.9.4",
    "@defra/hapi-gapi": "^2.1.2",
    "@hapi/boom": "^10.0.1",
    "@hapi/catbox-redis": "^7.0.2",
    "@hapi/cookie": "^12.0.1",
    "@hapi/hapi": "^21.3.7",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@hapi/wreck": "^18.0.1",
    "@hapi/yar": "^11.0.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "bcrypt": "^5.1.1",
    "blipp": "^4.0.2",
    "govuk-frontend": "^4.6.0",
    "hapi-pino": "12.1.0",
    "joi": "^17.12.2",
    "moment": "^2.30.1",
    "node-sass": "^9.0.0",
    "nunjucks": "^3.2.4",
    "postcode-validator": "^3.8.20",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@hapi/catbox-memory": "^6.0.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "node-html-parser": "^6.1.12",
    "nodemon": "^3.1.0",
    "standard": "^17.1.0",
    "style-loader": "^3.3.4"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "it",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ],
    "ignore": [
      "**/public/js/"
    ]
  },
  "nodemonConfig": {
    "ext": "html,css,js,cjs,mjs,json,pug,njk",
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": 3000
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coveragePathIgnorePatterns": [
      "__test-helpers__"
    ],
    "setupFiles": [
      "./.jest/test.env.js"
    ],
    "setupFilesAfterEnv": [
      "./.jest/setup.js"
    ],
    "testPathIgnorePatterns": [
      "__test-helpers__"
    ]
  }
}
