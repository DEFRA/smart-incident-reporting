{
  "name": "smart-incident-reporting",
  "version": "1.0.0",
  "description": "Digital service for incident reporting",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "node index.js",
    "build:css": "bin/build-css",
    "build": "bin/build",
    "debug": "nodemon --inspect index.js",
    "watch:css": "nodemon -e scss -x 'npm run build:css'",
    "watch:nodejs": "nodemon --delay 1000ms --signal SIGTERM -r dotenv/config index.js",
    "dev": "concurrently 'npm:watch:css' 'npm:watch:nodejs'",
    "lint": "standard",
    "unit-test": "jest --runInBand --verbose",
    "test": "npm run lint && npm run unit-test",
    "prettier": "prettier-config-standard",
    "prepare": "husky install",
    "start-backend": "docker-compose -f docker/backend-services.yml up -d",
    "stop-backend": "docker-compose -f docker/backend-services.yml down"
  },
  "author": "Department for Environment, Food & Rural Affairs",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/DEFRA/smart-incident-reporting/issues"
  },
  "homepage": "https://github.com/DEFRA/smart-incident-reporting#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/smart-incident-reporting.git"
  },
  "dependencies": {
    "@azure/service-bus": "^7.9.3",
    "@defra/hapi-gapi": "^2.1.2",
    "@hapi/boom": "^10.0.1",
    "@hapi/catbox-redis": "^7.0.2",
    "@hapi/hapi": "^21.3.2",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@hapi/wreck": "^18.0.1",
    "@hapi/yar": "^11.0.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "applicationinsights": "^2.9.2",
    "blipp": "^4.0.2",
    "date-format": "^4.0.14",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "govuk-frontend": "^4.6.0",
    "hapi-auth-basic": "^5.0.0",
    "hapi-pino": "12.1.0",
    "https-proxy-agent": "^7.0.2",
    "joi": "^17.11.1",
    "moment-timezone": "^0.5.44",
    "node-fetch": "^3.3.2",
    "node-sass": "^9.0.0",
    "nunjucks": "^3.2.4",
    "postcode-validator": "^3.8.20"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.8",
    "@hapi/catbox-memory": "^6.0.1",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.2.0",
    "nock": "^13.5.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.2",
    "prettier-config-standard": "^7.0.0",
    "standard": "^17.1.0"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "it",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ],
    "ignore": [
      "**/public/js/"
    ]
  },
  "nodemonConfig": {
    "ext": "html,css,js,cjs,mjs,json,pug,njk",
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": 3000
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coveragePathIgnorePatterns": [
      "__test-helpers__"
    ],
    "setupFiles": [
      "./.jest/test.env.js"
    ],
    "setupFilesAfterEnv": [
      "./.jest/setup.js"
    ],
    "testPathIgnorePatterns": [
      "__test-helpers__"
    ]
  }
}
